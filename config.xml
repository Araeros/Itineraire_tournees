<?xml version='1.0' encoding='utf-8'?>
<widget id="fr.mairie.dev" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Rout-Ine</name>
    <description>
        Une application de GPS Hors connexion sur la commune d'albi.
    </description>
    <author email="nicolas.privat@mairie-albi.fr" href="http://www.mairie-albi.fr">
		PRIVAT Nicolas
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access origin="*" />
    <platform name="android">
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="AndroidExtraFilesystems" value="sdcard,cache" />
        <allow-intent href="market:*" />
        <access origin="*" />
        <access launch-external="yes" origin="geo:*" />
        <access launch-external="yes" origin="http://*" />
        <access launch-external="yes" origin="https://*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <plugin name="cordova-sqlite-storage" spec="~2.0.4" />
    <plugin name="cordova-plugin-dialogs" spec="~1.3.3" />
    <plugin name="cordova-plugin-vibration" spec="~2.1.5" />
    <plugin name="de.appplant.cordova.plugin.local-notification" spec="~0.8.4" />
    <plugin name="cordova-plugin-zip" spec="~3.1.0" />
    <plugin name="cordova-plugin-file-transfer" spec="~1.6.3" />
    <plugin name="cordova-plugin-device" spec="~1.1.6" />
    <plugin name="cordova-plugin-file" spec="~4.3.3" />
    <plugin name="cordova-plugin-http" spec="~1.2.0" />
    <plugin name="org.apache.cordova.network-information" spec="~0.2.14" />
</widget>
